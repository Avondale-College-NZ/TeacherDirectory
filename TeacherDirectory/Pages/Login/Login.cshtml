@page
@model TeacherDirectory.Pages.LoginAndRegister.LoginModel
@{

}

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <h3>Login</h3>
    <form method="post" asp-page="Index">
        <div class="form-group row">
            <label asp-for="@Model.Username" class="col-sm-2 col-form-label">Username</label>
            <div class="col-sm-10">
                <input asp-for="@Model.Username" class="form-control" placeholder="Enter Username" />
                <span asp-validation-for="@Model.Username" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.Password" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input asp-for="@Model.Password" class="form-control" placeholder="Enter Password" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                &nbsp;
                <button type="submit" class="btn btn-primary" value="Login">Login</button>
            </div>
        </div>
    </form>
</body>

